#include<stdio.h>
int main(){
    int size;
    printf("Enter your array1 size :- ");
    scanf("%d",&size);

    int arr[size];
    int i;
    for (i = 0; i < size; i++){
         printf("array[%d] : ",i);
         scanf("%d",&arr[i]);
    }
    int size2;
    printf("Enter your array2 size :- ");
    scanf("%d",&size2);

    int arr2[size2];

    for (i = 0; i < size2; i++){
         printf("array[%d] : ",i);
         scanf("%d",&arr2[i]);
    }
    int sum=size+size2;
    int arr3[sum];

    printf("array3 = [");
    for(i=0; i<=size-1; i++ ){
        printf("%d ",arr[i]);
    }
    for(i=0; i<=size2-1; i++ ){
        printf("%d ",arr2[i]);
    }
    printf("]");
    return 0;
}

